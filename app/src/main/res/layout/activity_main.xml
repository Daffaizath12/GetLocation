<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_login_register"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button_description"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/backButton"
        android:layout_alignParentTop="@id/backButton"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/backButton"
        android:text="Cari Rute"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/lokasisaya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lokasi Asal"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/lokasituju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lokasi Tujuan"
        android:layout_below="@id/lokasisaya"
        android:layout_margin="10dp"
        android:background="#38ffffff"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lokasituju"
        android:text="Cari"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/cardview_dark_background"
        android:layout_centerInParent="true"/>

</RelativeLayout>
